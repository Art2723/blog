doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div(class='container')
        div(class='header')
          div.logo 
            a(href='/') #{config.blog_name}
          block header
            ul(class='header-nav')
              li 
                a(href='/admin/logout') Logout
              li 
                a(href='/admin/create') Create post 
              each item in config.menu_items
                li 
                  if title == item
                    a.selected(href='/admin/'+item) #{item}
                  else 
                    a(href='/admin/'+ item) #{item}
        div(class='main-content')
          h1 Admin panel
          block content
        div(class='footer')
          if tag
            if pages>1 
              if !page ||page==1
                span(class='next')
                  a.next(href='/admin/'+tag+'?page='+2) next
              else if page == pages
                span(class='prev')
                  a.prev(href='/admin/'+tag+'?page='+(+page-1)) prev
              else
                span(class='prev')
                  a.prev(href='/admin/'+tag+'?page='+(+page-1)) prev 
                span(class='next')
                  a.next(href='/admin/'+tag+'?page='+(+page+1)) next
          else
            if pages>1 
              if !page ||page==1
                span(class='next')
                  a.next(href='/admin/all?page='+2) next
              else if page == pages
                span(class='prev')
                  a.prev(href='/admin/all?page='+(+page-1)) prev
              else
                span(class='prev')
                  a.prev(href='/admin/all?page='+(+page-1)) prev
                span(class='next')
                  a.next(href='/admin/all?page='+(+page+1)) next


