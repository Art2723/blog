extends layout

block content
  ul(class='post')
  each post in posts_list
    li 
      a(href=post.url) 
        img.title_img(src=post.blog_post_img||config.default_img)
      h2(class='post-name') 
        a(href=post.url) #{post.blog_post_name} 
      span.post-content !{post.blog_post}
      span.post-tags tags: #{post.tags_post}
      span.post-date date: #{post.date_of_creation_formatted}
      if post.date_of_last_edit
        span.post-date last edited: #{post.date_of_last_edit_formatted}
      // disqus comments counter
      a.comment(href=post.url+'#disqus_thread') 




